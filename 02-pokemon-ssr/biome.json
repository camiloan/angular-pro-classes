{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules",
			"dist",
			"build"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "crlf",
		"lineWidth": 80
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useBlockStatements": "error"
			},
			"correctness": {
				"noUnusedVariables": "error",
				"useExhaustiveDependencies": "error",
				"noChildrenProp": "error",
				"noUndeclaredVariables": "error"
			},
			"suspicious": {
				"noExplicitAny": "error",
				"noArrayIndexKey": "error",
				"noDuplicateJsxProps": "error"
			},
			"a11y": {
				"useButtonType": "error",
				"useValidAnchor": "error",
				"noLabelWithoutControl": "error",
				"useAltText": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"semicolons": "asNeeded",
			"trailingCommas": "es5"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"globals": [
			"React"
		]
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab"
		}
	}
}